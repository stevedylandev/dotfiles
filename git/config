  email = stevedsimkins@gmail.com
	signingkey = ssh-rsa 

[core]
  compression = 9
  whitespace = error
  preloadindex = true

[commit]
  template = ~/.config/git/template
	gpgsign = true

[advice]
  addEmptyPathspec = false
  pushNonFastForward = false

[url "git@github.com:stevedylandev/"]
  insteadOf = "stevedylandev:"

[url "git@github.com:"]
  insteadOf = "gh:"

[init]
  defaultBranch = main

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[diff]
  context = 3
  interHunkContext = 10

[push]
  followTags = true

[pull]
  default = current
  rebase = true

[rebase]
  autoStash = true
  missingCommitsCheck = warn

[log]
  abbrevCommit = true
  graphColors = blue,yellow,cyan,megenta,green,red

[color "diff"]
    meta       = black bold
    frag       = magenta
    context    = white
    whitespace = yellow reverse
    old        = red

[color "decorate"]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta

[color "branch"]
  current = magenta
  local = default
  remote = yellow
  upstream = green
  plain = blue

[branch]
  sort = -committerdate

[tag]
  sort = -taggerdate



[gpg]
	format = ssh
